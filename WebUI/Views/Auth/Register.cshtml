@model UserForRegisterDto
@{
    Layout = "_AuthLayout";
}

<div class="mx-auto mt-5" style="width:300px;">
    <h2>Üye Kayıt Ekranı</h2>
    <form asp-controller="auth" asp-action="register" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-2">
            <label asp-for="FirstName">Adınız:</label>
            <input asp-for=FirstName class="form-control">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="LastName">Soyadınız:</label>
            <input asp-for=LastName class="form-control">
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Email">E-Posta:</label>
            <input asp-for=Email class="form-control">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for=Password>Şifre:</label>
            <input asp-for="Password" class="form-control">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="ConfirmPassword">Şifre(Tekrar):</label>
            <input asp-for=ConfirmPassword class="form-control">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group mb-2">
            <span>Giriş yapmak için <a href="/auth/login">tıklayın</a> </span>
        </div>
        <button type="submit" class="btn btn-primary">Üye Ol</button>
    </form>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}